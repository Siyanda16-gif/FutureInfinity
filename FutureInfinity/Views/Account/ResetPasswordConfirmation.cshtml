@{
    ViewBag.Title = "Reset password confirmation";
}

<main aria-labelledby="title">
    <hgroup class="title">
        <h1 id="title" style="font-family: Arial, sans-serif; color: red;">@ViewBag.Title.</h1>
    </hgroup>
    <div>
        <p style="font-family: Arial, sans-serif; color: black;">
            Your password has been reset. Please @Html.ActionLink("click here to log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", style = "color: red;" })
        </p>
    </div>
</main>
