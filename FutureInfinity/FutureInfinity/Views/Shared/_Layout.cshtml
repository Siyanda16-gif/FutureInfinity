<body>

    <!-- Spinner Start -->
    <div id="spinner" class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50  d-flex align-items-center justify-content-center">
        <div class="spinner-grow text-primary" role="status"></div>
    </div>
    <!-- Spinner End -->
    <!-- Navbar start -->
    <div class="container-fluid nav-bar">
        <div class="container">
            <nav class="navbar navbar-light navbar-expand-lg py-4">
                <a href="/Home/Index" class="navbar-brand">
                    <h1 class="text-primary fw-bold mb-0">Nonami@*<span class="text-dark">Book</span>*@ </h1>
                </a>
                <button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="fa fa-bars text-primary"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav mx-auto">

                        @if (Request.IsAuthenticated)
                        {
                            if (User.IsInRole("Admin"))
                            {
                                <div class="nav-item dropdown">
                                    <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Pages</a>
                                    <div class="dropdown-menu bg-light">
                                        <a href="/Products/Create" class="dropdown-item">Add Product</a>
                                        <a href="/Products/Index" class="dropdown-item">Product List</a>
                                    </div>
                                </div>

                                <div class="nav-item dropdown">
                                    <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Ordered</a>
                                    <div class="dropdown-menu bg-light">
                                        <a href="/Products/HiredList" class="dropdown-item">Ordered List</a>
                                    </div>
                                </div>

                                <div class="nav-item dropdown">
                                    <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Nonami Management</a>
                                    <div class="dropdown-menu bg-light">
                                        <a href="/Drivers/Create" class="dropdown-item">Create Driver</a>
                                        <a href="/Drivers/Index" class="dropdown-item">Drivers List</a>
                                        <a href="/DeliveryVans/Create" class="dropdown-item">Create Delivery Van</a>
                                        <a href="/DeliveryVans/Index" class="dropdown-item">List Of Delivery Van</a>
                                    </div>
                                </div>

                                @Html.Partial("_LoginPartial")
                            }
                            else if (User.IsInRole("Driver"))
                            {

                                <div class="nav-item dropdown">
                                    <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Deliveries</a>
                                    <div class="dropdown-menu bg-light">
                                        <a href="/Drivers/DeliveryList" class="dropdown-item">My Deliveries</a>
                                    </div>
                                </div>
                                @Html.Partial("_LoginPartial")
                            }
                            else
                            {
                                <a href="/Home/Index" class="nav-item nav-link active">Home</a>
                                <a href="/Home/About" class="nav-item nav-link">About</a>
                                <a href="/Home/Contact" class="nav-item nav-link">Contact</a>
                                <a href="/Products/Index" class="nav-item nav-link">Order Now</a>

                                <div class="nav-item dropdown">
                                    <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Orders</a>
                                    <div class="dropdown-menu bg-light">
                                        <a href="/Products/Orders" class="dropdown-item">My Orders</a>
                                    </div>
                                </div>

                                @Html.Partial("_LoginPartial")
                            }
                        }
                        else
                        {
                            <a href="/Home/Index" class="nav-item nav-link active">Home</a>
                            <a href="/Home/About" class="nav-item nav-link">About</a>
                            <a href="/Home/Contact" class="nav-item nav-link">Contact</a>
                            @Html.Partial("_LoginPartial")
                        }
                    </div>
                </div>
            </nav>
        </div>
    </div>
    <!-- Navbar End -->

    <div class="container">
        @RenderBody()
    </div>
    <!-- Footer Start -->
